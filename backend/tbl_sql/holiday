-- Table: public.holidays

-- DROP TABLE IF EXISTS public.holidays;

CREATE TABLE IF NOT EXISTS public.holidays
(
    holiday_id integer NOT NULL GENERATED BY DEFAULT AS IDENTITY ( INCREMENT 1 START 1 MINVALUE 1 MAXVALUE 2147483647 CACHE 1 ),
    date timestamp with time zone,
    title character varying(200) COLLATE pg_catalog."default" NOT NULL,
    color character varying(20) COLLATE pg_catalog."default",
    description character varying(50) COLLATE pg_catalog."default",
    createdat timestamp with time zone DEFAULT '2023-09-26 10:36:34.908+05:30'::timestamp with time zone,
    updatedat timestamp with time zone DEFAULT '2023-09-26 10:36:34.908+05:30'::timestamp with time zone,
    "createdAt" timestamp with time zone NOT NULL DEFAULT CURRENT_TIMESTAMP,
    "updatedAt" timestamp with time zone NOT NULL DEFAULT CURRENT_TIMESTAMP,
    is_active boolean DEFAULT true,
    CONSTRAINT holidays_pkey PRIMARY KEY (holiday_id)
)

TABLESPACE pg_default;

ALTER TABLE IF EXISTS public.holidays
    OWNER to postgres;